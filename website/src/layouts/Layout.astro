---
// コンポーネントのインストール
import Footer from '../components/Footer.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja" class="bg-base size-full">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="naoki`s website" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-black sm:mx-96 sm:my-16">
        <slot />
        <Footer />
    </body>
</html>
